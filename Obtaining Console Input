#include <iostream>
#include <string>

using namespace std;

int main ()
{
	string lastname, firstname;
	string address;
	string city, state, zip;
	string street;

	cout << "Enter last name: ";
	getline(cin,lastname);

	cout <<  "Enter first name: ";
	getline(cin,firstname);
 
	cout << "Enter address: ";
	getline(cin,address);

	cout <<  "Enter city: ";
	getline(cin,city);

	cout << "Enter state: ";
	getline(cin,state);

	cout << "Enter zip: ";
	getline(cin,zip);

//Full shipping address
	cout << firstname << " " << lastname << endl;
	cout << address << endl;
	cout << city << "," << " " << state << " " << zip;

	return 0;
}
